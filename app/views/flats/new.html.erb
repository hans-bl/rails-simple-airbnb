<div class="container">
  <div class="row justify-content-center my-3">
    <div class="col-6 ">
    <h2>Add a new flat</h2>

    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
